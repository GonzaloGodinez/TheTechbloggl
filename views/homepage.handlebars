<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      {{{get_emoji}}}
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
    <p>
      <span for="img" aria-label="tech">ðŸ’»</span>
      <!-- Pass title value to the helper function -->
      <span class="title">{{post.title}}</span>
    </p>
    <p>Created by {{post.User.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}
